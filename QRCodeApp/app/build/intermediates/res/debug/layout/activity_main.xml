<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.javacodegeeks.androidstartactivityforresultexample.ActivityOne" >

    <TextView
        android:id="@+id/current_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="@string/location1_clue"
        android:textColor="#000000"
        android:layout_margin="30dp"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/clue_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="@string/location1_clue"
        android:textColor="#000000"
        android:layout_margin="30dp"
        />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="22dp"
        android:text="@string/scan_button"
        android:gravity="center"
        android:onClick="scanQR"
        android:textSize="25sp" >
    </Button>

    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text=""
        android:textColor="#000000"
        android:layout_margin="30dp"
        />

    <Button
        android:id="@+id/next_target_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="22dp"
        android:text="@string/next_target_button"
        android:gravity="center"
        android:onClick="showNextClue"
        android:textSize="25sp" >
    </Button>

